---
import BoxArticles from "@pages/home/BoxArticles.astro";

---
<section class="section trending">
  <div class="container">
    <div class="col-left">


     <BoxArticles
        first={1}
        last={4}
        type="trending"
     />  

    </div>

    <div class="col-right">
        <BoxArticles
        first={5}
        last={10}
        type="trending" 
        />
    </div>
  </div>
</section>

<style>
  .trending {
    padding-top: 32px;
    .container {
      display: grid;
      grid-template-columns: 2fr 1fr;
      gap: 32px;
      padding: 0;
    }

    .col-left {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      grid-template-rows: auto 1fr;
      gap: 24px;
      & .trending-note {
        position: relative;
      
        & img {
          position: relative;
          width: 100%;
          border-radius: var(--border-radius);
          aspect-ratio: 18 / 12;
          object-fit: cover;
          line-height: 0;
          
        }
        & a {
          display: flex;
          margin-bottom: 8px;
        }
      }
      .trending-note.note-0 {
        grid-column: 1/4;
        & a {
            margin-bottom: 0;
        }
        & img {
          height: 100%;
          max-height: 600px;
        }
        & .text {
          position: absolute;
          z-index: 2;
          bottom: 32px;
          left: 0px;
          padding: 0 32px;
        }
        & .title {
          font-size: 32px;
          line-height: 1.15;
          color: #fff;
          font-weight: 700;
        }
        &:after {
          content: "";
          display: block;
          position: absolute;
          z-index: 1;
          bottom: 0;
          left: 0;
          width: 100%;
          height: 50%;
          border-radius: var(--border-radius);
          overflow: clip;
          background: linear-gradient(
            to bottom,
            rgba(2, 26, 71, 0) 0%,
            rgba(2, 26, 71, 0.6) 100%
          );
          pointer-events: none;
        }
      }
      .trending-note:not(.note-0) {
        & .text {
        }
        & .title {
          font-size: 18px;
          line-height: 1.3333;
          font-weight: 600;
          color: #000;
        }
         .label {
            margin-bottom: 0;
         }
      }
    }
    .col-right {
      & .trending-note {
        display: grid;
        grid-template-columns: 0.75fr 1.25fr;
        gap: 16px;
        align-items: stretch;
        border-bottom: 1px solid #eee;
        padding: 20px 0;
        &:first-child {
          padding-top: 0;
        }
        & img {
          width: 100%;
          height: 100%;
          border-radius: 8px;
          aspect-ratio: 18 / 12;
          object-fit: cover;
        }
        & h2 {
          font-size: 18px;
          margin: 0;
          line-height: 1.3333;
          font-weight: 500;
          color: #000;
        }
        & .title {
          font-size: 16px;
        }
      }
    }
  }
</style>
