---
import banner from "@assets/images/banner.jpg";
---

<div class="header-middle">
  <div class="container">
    <div class="logo">
      <a href="/"><img src="/logo.png" width="185" height="62" alt="Logo" /></a
      >
    </div>
    <div class="banner">
      <a href="#"
        ><img src={banner.src} width="750" height="100" alt="Banner" /></a
      >
    </div>
    <div class="mobile-nav" style="display: none"></div> 
  </div>
</div>
<style>
  .header-middle {
    & .container {
      
      display: grid;
      grid-template-columns: 1fr 1fr;
      align-items: center;
      align-content: center;
      overflow: clip;
      @media (max-width: 767px) {
        grid-template-columns: 1fr;
      }
    }
    & .logo {
      @media (max-width: 1024px) {
        text-align: left;
        margin: 0 0 8px 0;
        text-align: left;
        max-width: 20vw;
      }
      @media (max-width: 767px) {
        margin: 0;
        max-width: 30vw;
      }
    }
    .banner img {
      width: 750px;
      max-width: 100%;
      height: auto;
    }
    @media (max-width: 1024px) {
      & .banner {
        text-align: center;
        @media (max-width: 767px) {
          display: none;
        }
        img {
          width: 100%;
        }
      }
    }
  }
</style>
